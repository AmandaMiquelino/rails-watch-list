<h1>Add a movie to the list"<%= @list.name %>"</h1>

<%= form_with model: @bookmark, url: list_bookmarks_path(@list), local: true do |form| %>
  <div class="form-group">
    <%= form.label :movie_id, "Choose a filme" %>
    <%= form.collection_select :movie_id, Movie.all, :id, :title, { prompt: "Select a film" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :comment, "Comment" %>
    <%= form.text_area :comment, class: "form-control" %>
  </div>

  <%= form.submit "Add", class: "btn btn-success" %>
<% end %>

<%= link_to "Back", list_path(@list), class: "btn btn-secondary" %>
