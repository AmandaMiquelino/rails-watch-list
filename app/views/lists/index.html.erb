<div class="banner">
  <h1>Watch List</h1>
</div>

<div class="lists-container">
  <% @lists.each do |list| %>
    <div class="list-item">
      <%= link_to list.name, list_path(list), class: "list-link" %>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center">
<%= link_to "Create a new list", new_list_path, class: "btn btn-danger text-white rounded" %>
</div>
